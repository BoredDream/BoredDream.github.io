// 头像加载失败处理
document.addEventListener('DOMContentLoaded', function() {
  const avatars = document.querySelectorAll('.link-avatar');
  
  avatars.forEach(avatar => {
    // 检查图片是否已经加载失败
    if (avatar.complete && avatar.naturalHeight === 0) {
      // 图片加载失败，显示备用头像
      avatar.style.display = 'none';
      const noAvatar = avatar.parentNode.querySelector('.no-avatar');
      if (noAvatar) {
        noAvatar.style.display = 'flex';
        // 设置备用头像的首字母
        const linkName = avatar.parentNode.querySelector('.link-name');
        if (linkName) {
          const text = linkName.textContent || linkName.innerText;
          if (text && text.trim()) {
            noAvatar.textContent = text.trim().charAt(0);
          }
        }
      }
    }
    
    // 添加加载失败监听
    avatar.addEventListener('error', function() {
      this.style.display = 'none';
      const noAvatar = this.parentNode.querySelector('.no-avatar');
      if (noAvatar) {
        noAvatar.style.display = 'flex';
        // 设置备用头像的首字母
        const linkName = this.parentNode.querySelector('.link-name');
        if (linkName) {
          const text = linkName.textContent || linkName.innerText;
          if (text && text.trim()) {
            noAvatar.textContent = text.trim().charAt(0);
          }
        }
      }
    });
  });
  
  // 卡片悬停效果增强
  const cards = document.querySelectorAll('.link-card');
  cards.forEach(card => {
    card.addEventListener('mouseenter', function() {
      this.style.zIndex = '10';
    });
    
    card.addEventListener('mouseleave', function() {
      this.style.zIndex = '1';
    });
  });
});
</script>
