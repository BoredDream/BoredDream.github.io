    --skill-tag-hover: rgba(96, 165, 250, 0.2); /* 技能标签悬停 */
    
    /* 暗色模式社交链接 */
    --social-bg: rgba(30, 41, 59, 0.8); /* 社交链接背景 */
    --social-text: #e2e8f0; /* 社交链接文字 */
    --social-hover: rgba(96, 165, 250, 0.2); /* 社交链接悬停 */
    
    /* 暗色模式渐变背景 */
    --gradient-center: rgba(99, 102, 241, 0.1); /* 中心渐变颜色 - 蓝色调 */
    --gradient-edge: transparent; /* 边缘渐变颜色 */
