<script>
// 防爬虫邮箱处理
document.addEventListener('DOMContentLoaded', function() {
  // 邮箱配置（使用防爬虫格式）
  const encodedEmail = 'boreddream[at]qq[dot]com';
  
  // 解码邮箱函数
  function decodeEmail(encoded) {
    return encoded
      .replace(/\[at\]/g, '@')
      .replace(/\[dot\]/g, '.');
  }
  
  // 获取DOM元素
  const emailPlaceholder = document.getElementById('email-placeholder');
  const emailLink = document.getElementById('email-link');
  
  // 解码真实邮箱
  const realEmail = decodeEmail(encodedEmail);
  
  // 显示邮箱（延迟显示以增强防爬虫效果）
  setTimeout(function() {
    if (emailPlaceholder) {
      emailPlaceholder.textContent = realEmail;
      emailPlaceholder.classList.remove('loading');
    }
    
    // 设置邮箱链接
    if (emailLink) {
      emailLink.href = 'mailto:' + realEmail;
      emailLink.addEventListener('click', function(e) {
        // 添加点击确认（可选）
        if (!confirm('确定要发送邮件到 ' + realEmail + ' 吗？')) {
          e.preventDefault();
        }
      });
    }
  }, 1000); // 1秒延迟
  
  // 添加复制邮箱功能
  emailPlaceholder.addEventListener('click', function() {
    navigator.clipboard.writeText(realEmail).then(function() {
      const originalText = emailPlaceholder.textContent;
      emailPlaceholder.textContent = '已复制到剪贴板！';
      emailPlaceholder.style.color = '#27ae60';
      
      setTimeout(function() {
        emailPlaceholder.textContent = originalText;
        emailPlaceholder.style.color = '';
      }, 2000);
    }).catch(function(err) {
      console.error('复制失败:', err);
      alert('复制失败，请手动复制邮箱地址');
    });
  });
  
  // 添加复制提示
  emailPlaceholder.title = '点击复制邮箱地址';
  emailPlaceholder.style.cursor = 'pointer';
  
  // 初始显示加载状态
  emailPlaceholder.classList.add('loading');
});

// 防止右键查看源代码（增强保护）
document.addEventListener('contextmenu', function(e) {
  if (e.target.id === 'email-placeholder' || e.target.id === 'email-link') {
    e.preventDefault();
    alert('邮箱地址已受保护，请通过点击复制功能获取');
  }
});

// 防止键盘快捷键查看源代码
document.addEventListener('keydown', function(e) {
  // 阻止 Ctrl+U 查看源代码
  if (e.ctrlKey && e.key === 'u') {
    e.preventDefault();
  }
  
  // 阻止 F12 开发者工具
  if (e.key === 'F12') {
    e.preventDefault();
  }
});
</script>
