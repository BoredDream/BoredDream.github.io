}

/* 页面整体样式 */
body {
  /* 全局固定背景 - 与友链页面保持一致，消除贴片感 */
  background: 
    /* 主渐变层 - 覆盖整个视口 */
    radial-gradient(
      circle at 50% 50%,
      var(--gradient-center) 0%,
      var(--gradient-edge) 70%
    ),
    /* 辅助渐变层 - 增强视觉效果 */
    radial-gradient(
      circle at 20% 80%,
      var(--gradient-center) 0%,
      var(--gradient-edge) 40%
    ),
    radial-gradient(
      circle at 80% 20%,
      var(--gradient-center) 0%,
      var(--gradient-edge) 40%
    ),
    /* 基础背景色 */
    var(--bg-primary) !important;
  
  /* 关键修复：确保背景固定且覆盖整个视口 */
  background-attachment: fixed !important;
  background-size: cover !important;
  background-repeat: no-repeat !important;
  background-position: center center !important;
  
  /* 移动端性能优化：减少渐变复杂度 */
  @media (max-width: 768px) {
    background: 
      radial-gradient(
        circle at 50% 50%,
        var(--gradient-center) 0%,
        var(--gradient-edge) 70%
      ),
      var(--bg-primary) !important;
  }
  
  min-height: 100vh;
  transition: background 0.3s ease;
  
  /* 确保内容区域不会破坏背景连续性 */
  position: relative;
}

/* 为内容区域添加轻微的背景层，增强毛玻璃效果 */
body::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(
      circle at 50% 50%,
      rgba(255, 255, 255, 0.03) 0%,
      transparent 50%
    );
  pointer-events: none;
  z-index: -1;
  backdrop-filter: blur(1px);
  -webkit-backdrop-filter: blur(1px);
}

/* 暗色模式背景优化 */
@media (prefers-color-scheme: dark) {
  body::before {
    background: 
      radial-gradient(
        circle at 50% 50%,
        rgba(99, 102, 241, 0.05) 0%,
        transparent 50%
      );
  }
}

